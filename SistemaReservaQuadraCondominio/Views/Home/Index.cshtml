@page
@model SistemaReservaQuadraCondominio.Models.Reserva

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Reservas - Quadra do Condomínio</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fb; /* Fundo claro */
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            text-align: center;
            background-color: #ffffff;
            border-radius: 8px;
            padding: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
        }

        h1 {
            font-size: 2.5rem;
            color: #0056b3; /* Azul escuro */
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin: 35px 0;
        }

        a {
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: bold;
            color: #ffffff;
            background-color: #0056b3; /* Azul escuro */
            padding: 12px 25px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        a:hover {
            background-color: #00408f; /* Azul mais escuro */
            transform: translateY(-2px);
        }

        a:active {
            background-color: #003b7d; /* Azul mais escuro */
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bem-vindo ao Sistema de Reservas de Horário do Condomínio!</h1>
        <p>Escolha uma opção abaixo:</p>
        <ul>
            <li><a href="/Reserva/Cadastro">Reservar Horário da Quadra</a></li>
            
            <li><a href="/Reserva/Administrador">Visualizar Reservas Feitas</a></li>
        </ul>
    </div>
</body>
</html>
